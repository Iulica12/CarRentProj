<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Car Booking Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/CarRentProj.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />

</head>
<body>
    <header>
        <input class="menu-icon" type="checkbox" id="menu-icon" name="menu-icon" />
        <label for="menu-icon"></label>
        <nav class="nav">
            <ul class="pt-5">
                <li class="nav-item">
                    <a class="nav-link " asp-area="" asp-page="/Cars/Index">Cars</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " asp-area="" asp-page="/Makes/Index">Makes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " asp-area="" asp-page="/CarModels/Index">Models</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Colours/Index">Colours</a>
                </li>
            </ul>
        </nav>

        <div class="section-center">
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Car Booking Project - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>