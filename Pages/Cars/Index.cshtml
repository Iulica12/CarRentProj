@page "/"
@model CarRentProj.Pages.Cars.IndexModel

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<h1>List Cars</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<table class="table text-light">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.YearSort">
                @Html.DisplayNameFor(model => model.Car[0].Year)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.MakeSort">
                @Html.DisplayNameFor(model => model.Car[0].Make.MakeName)
                </a>
            </th>
            <th>
               @Html.DisplayNameFor(model => model.Car[0].CarModel.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Colour.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CarD.Cars) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Make.MakeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarModel.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Colour.Name)
                </td>
            <td>
                <a class = "btn btn-warning" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
